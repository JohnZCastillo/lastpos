            <TableColumn fx:id="sku" prefWidth="75.0" text="SKU" />
            <TableColumn fx:id="barcode" prefWidth="75.0" text="BARCODE" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="search" />
            <ComboBox fx:id="categoryBox" prefWidth="150.0" />
            <Button fx:id="viewAll" mnemonicParsing="false" text="View All" />
            <Button mnemonicParsing="false" onAction="#addProduct" text="Add" />
            <Button mnemonicParsing="false" onAction="#filter" text="Filter" />
